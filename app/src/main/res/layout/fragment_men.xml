<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MenFragment">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_green_100"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_8adp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7adp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing=".05"
            android:paddingVertical="@dimen/_4adp"
            android:text="@string/health_str"
            android:textColor="@color/white"
            android:textSize="@dimen/_18asp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginVertical="@dimen/_8adp"
        android:padding="@dimen/_7adp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".12" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3">

        <ScrollView
            android:id="@+id/workout_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:visibility="gone">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_12adp"
                android:paddingTop="@dimen/_12adp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/workoutTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="Beginner gym workout for males"
                        android:textColor="@color/app_black_100"
                        android:textSize="@dimen/_14asp" />

                    <ImageView
                        android:id="@+id/workoutTitleStatus1"
                        android:layout_width="@dimen/_20adp"
                        android:layout_height="@dimen/_20adp"
                        android:layout_marginHorizontal="@dimen/_12adp"
                        android:src="@drawable/ic_close" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_8adp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_1"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_2"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_3"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_4"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_5"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_6"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_7"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/basic_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_6adp"
                            android:text="● Seated chest press (10 reps x 4 sets)"
                            android:textColor="@color/text_200"
                            android:textSize="@dimen/_10adp" />

                        <ImageView
                            android:id="@+id/basic_status_8"
                            android:layout_width="@dimen/_20adp"
                            android:layout_height="@dimen/_20adp"
                            android:layout_marginHorizontal="@dimen/_12adp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/food_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:visibility="gone">

            <WebView
                android:id="@+id/food_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_12adp"
                android:paddingTop="@dimen/_12adp">

                <LinearLayout
                    android:id="@+id/weight_gain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12adp"
                    android:background="@drawable/bg_button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/_10adp">

                    <ImageView
                        android:layout_width="@dimen/_100adp"
                        android:layout_height="@dimen/_100adp"
                        android:padding="@dimen/_8adp"
                        android:src="@drawable/ic_gym_weight_gain" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="Weight Gain"
                        android:textColor="@color/app_white_100"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weight_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12adp"
                    android:background="@drawable/bg_button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/_10adp">

                    <ImageView
                        android:layout_width="@dimen/_100adp"
                        android:layout_height="@dimen/_100adp"
                        android:padding="@dimen/_8adp"
                        android:src="@drawable/ic_gym_weight_lose" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="Weight Loss"
                        android:textColor="@color/app_white_100"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workout_plan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12adp"
                    android:background="@drawable/bg_button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/_10adp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_100adp"
                        android:layout_height="@dimen/_100adp"
                        android:padding="@dimen/_8adp"
                        android:src="@drawable/ic_gym_fitness" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="Workout plan"
                        android:textColor="@color/app_white_100"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bmi_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12adp"
                    android:background="@drawable/bg_button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/_10adp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_100adp"
                        android:layout_height="@dimen/_100adp"
                        android:padding="@dimen/_8adp"
                        android:src="@drawable/ic_bmi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="@string/bmi_calculation"
                        android:textColor="@color/app_white_100"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/food_plan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12adp"
                    android:background="@drawable/bg_button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/_10adp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_100adp"
                        android:layout_height="@dimen/_100adp"
                        android:padding="@dimen/_8adp"
                        android:src="@drawable/ic_gym_checklist" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="Food Plan"
                        android:textColor="@color/app_white_100"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/web_plan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12adp"
                    android:background="@drawable/bg_button"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/_10adp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_100adp"
                        android:layout_height="@dimen/_100adp"
                        android:padding="@dimen/_8adp"
                        android:src="@drawable/ic_gym_lifestyle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_8adp"
                        android:text="Health Care"
                        android:textColor="@color/app_white_100"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/weight_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weight_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_8adp"
                android:text="weight Loss"
                android:paddingHorizontal="@dimen/_12adp"
                android:textColor="@color/app_black_100"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_8adp"
                android:textSize="@dimen/_16asp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/weight_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_12adp"
                android:layout_marginTop="@dimen/_8adp"
                tools:listitem="@layout/layout_weight_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>